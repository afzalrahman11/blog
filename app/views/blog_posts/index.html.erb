<h1 class="text-4xl font-bold mb-4 mt-10">Blog Post</h1>
<p class="text-lg mb-8">This is the Blog Post Webpage where you can find out the blogs in various topics.</p>

<% @blog_posts.each do |blog_post| %>
  <div class="mb-6">
    <h3 class="text-2xl font-semibold text-blue-600 hover:underline">
      <%= link_to blog_post.title, blog_post %>
    </h3>
    <% if blog_post.draft? %>
    <div>
      <span class="text-sm bg-gray-200 text-red-500">Draft</span>
    </div>
    <% elsif blog_post.scheduled? %>
      <div>
        <span class="text-sm  bg-gray-200 text-blue-500">Scheduled</span>
      </div>
    <% end %>

    <p class="text-base text-gray-700"><%= blog_post.content %></p>
  </div>
<% end %>
